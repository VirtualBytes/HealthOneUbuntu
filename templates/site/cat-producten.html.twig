{% extends "base.html.twig" %}

{% block title %}Categorien{% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}
{% block body %}
<h4>Category:</h4>
    <div id="Categories" class="row row-cols-1 row-cols-md-4 g-4">
        {% for prodrepo in products %}
            <div class="col">
                <div class="card">
                <img src="{{ asset(prodrepo.picture) }}" class="card-img-top" alt="{{ prodrepo.name }}">
                <div class="card-body">
                    <h5 class="card-title">{{ prodrepo.name }}</h5>
                    <p class="card-text">{{ prodrepo.description }}</p>
                </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}