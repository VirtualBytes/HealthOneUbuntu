{% extends "base.html.twig" %}

{% block title %}Categorien{% endblock %}
{% block stylesheets %}{{ parent() }}{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}
{% block body %}
<h4>Categories</h4>
    <div id="Categories" class="row row-cols-1 row-cols-md-4 g-4">
        {% for category in categories %}
        <a href="/category/{{ category.id }}">
            <div class="col">
                <div class="card">
                <img src="{{ asset(category.picture) }}" class="card-img-top" alt="{{ category.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ category.name }}</h5>
                        <p class="card-text">{{ category.description }}</p>
                    </div>
                </div>
            </div>
        </a>
        {% endfor %}
    </div>
{% endblock %}